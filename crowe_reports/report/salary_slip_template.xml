                                            <tr>
                                                <td style="text-align:left;background-color:lightblue;">
                                                    Leave Encashment
                                                </td>
                                                <td style="text-align:right">
                                                    <span t-esc="(o.get_leave_encashment())"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="text-align:left;background-color:lightblue;">
                                                    Phone Allowance
                                                </td>
                                                <td style="text-align:right">
                                                    <span t-esc="(o.get_phone_allowance())"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="text-align:left;background-color:lightblue;">
